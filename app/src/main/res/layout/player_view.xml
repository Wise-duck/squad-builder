<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="player"
            type="com.example.squadbuilder.data.Player" />
    </data>

    <LinearLayout
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/player_shape">

        <TextView
            android:id="@+id/playerPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@{player.position}"
            android:textSize="14sp"
            android:gravity="center" />

        <ImageView
            android:id="@+id/playerProfileImage"
            app:imageUri="@{player.photoUri}"
            android:background="@color/frog"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/playerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@{player.name}"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/playerNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@{String.valueOf(player.number)}"
            android:textSize="14sp"
            android:gravity="center" />



    </LinearLayout>
</layout>
